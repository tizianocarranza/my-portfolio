---

import MenuButton from './MenuButton.astro';
import MenuInfo from './MenuInfo.astro';
import MenuCurrent from './MenuCurrent.astro';
import { Image } from 'astro:assets';
import aboutIcon from "../../assets/nav/about-icon.svg"
import toolsIcon from "../../assets/nav/tools-icon.svg"
import workIcon from "../../assets/nav/work-icon.svg"
import contactIcon from "../../assets/nav/contact-icon.svg"

---


<!-- <div class="flex flex-col items-center justify-center gap-5 place-self-center w-full h-full"> -->
    <!-- <MenuInfo /> -->
    <div class="flex justify-center items-end gap-5 w-11/12 md:w-10/12 lg:w-96 h-8" > 
        <MenuButton href="#hero">
            <Image src={aboutIcon} alt="about" height={22} width={22} slot={"icon"} class={"object-cover"}/>
        </MenuButton>
        <MenuButton href="#skills" >
            <Image src={toolsIcon} alt="skills" height={15} width={15} slot={"icon"} class={"object-cover"}/>
        </MenuButton>
        <MenuButton href="#projects">
            <Image src={workIcon} alt="projects" height={16} width={16} slot={"icon"} class={"object-cover"}/>
        </MenuButton>
        
        <MenuButton href="#contact">
            <Image src={contactIcon} alt="contact" height={16} width={16} slot={"icon"} class={"object-cover"}/>
        </MenuButton>
    </div>
