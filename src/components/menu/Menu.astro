    <div class="flex justify-center items-end gap-5 w-11/12 md:w-10/12 lg:w-96 h-8" > 
        <MenuButton href="/" >
            <Image src={aboutIcon} alt="about" height={20} width={20} slot={"icon"} class={"object-cover"}/>
        </MenuButton>
        
        <MenuButton href="/projects/donar">
            <Image src={workIcon} alt="projects" height={15} width={15} slot={"icon"} class={"object-cover"}/>
        </MenuButton>
        
        <MenuButton href="/contact">
            <Image src={contactIcon} alt="contact" height={15} width={15} slot={"icon"} class={"object-cover"}/>
        </MenuButton>
    </div>
