---

import MenuButton from './MenuButton.astro';
import MenuInfo from './MenuInfo.astro';
import MenuCurrent from './MenuCurrent.astro';
import { Image } from 'astro:assets';
import aboutIcon from "../../assets/about-icon.svg"
import workIcon from "../../assets/work-icon.svg"
import contactIcon from "../../assets/contact-icon.svg"

---


<div class="flex flex-col items-center justify-center gap-2 place-self-center w-full h-full">
    <MenuInfo />
    <div class="flex justify-center items-end gap-5 w-11/12 md:w-10/12 lg:w-96 h-8" > 
        <MenuButton href="/" >
            <Image src={aboutIcon} alt="about" height={40} width={40} slot={"icon"} class={"object-cover"}/>
        </MenuButton>
        
        <MenuButton href="/projects">
            <Image src={workIcon} alt="projects" height={30} width={30} slot={"icon"} class={"object-cover"}/>
        </MenuButton>
        
        <MenuButton href="/contact">
            <Image src={contactIcon} alt="contact" height={30} width={30} slot={"icon"} class={"object-cover"}/>
        </MenuButton>
    </div>
    <MenuCurrent />
</div>