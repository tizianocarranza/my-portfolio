---
    const url = Astro.url.pathname
    console.log(url);
---

<div class="grid grid-cols-3 justify-center items-end gap-5 h-1 w-11/12 md:w-96" transition:animate="initial">
    <div class="flex justify-center items-center w-full h-full">
        <div class:list={[
            "scale-x-0 bg-light w-1/3 h-full  -3xl transition-all",
            {"appear origin-left" : url == "/"},
        ]}></div>
    </div>
    <div class="flex justify-center items-center w-full h-full">
        <div class:list={[
            "scale-x-0 bg-light w-1/3 h-full  -3xl transition-all",
            {"appear" : url == "/projects"},
        ]}></div>
    </div>
    <div class="flex justify-center items-center w-full h-full">
        <div class:list={[
            "scale-x-0 bg-light w-1/3 h-full  -3xl transition-all",
            {"appear origin-right" : url == "/contact"},
        ]}></div>
    </div>
</div>


<style>
    .appear {
        animation: appear-animation 200ms ease-in-out 0ms both;
    }

    .wrapper .appear:nth-child(1) {
        transform-origin: left;
    }
    .wrapper .appear:nth-child(3) {
        transform-origin: right;
    }

    @keyframes appear-animation {
        from {
            transform: scaleX(0);
        }
        to {
            transform: scaleX(1);
        }
    }
</style>