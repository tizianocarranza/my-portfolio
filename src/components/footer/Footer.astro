---
import FooterButton from "./FooterButton.astro"
import FooterCurrent from "./FooterCurrent.astro"
import FooterInfo from "./FooterInfo.astro"

import Image from "astro/components/Image.astro"

import aboutIcon from "../../assets/about-icon.svg"
import contactIcon from "../../assets/contact-icon.svg"
import workIcon from "../../assets/work-icon.svg"
import Sidebar from "../sidebar/Sidebar.astro"

const url = Astro.url.pathname
---


<footer class="fixed bottom-0 left-0 flex justify-center items-end w-full h-1/3 z-50 bg-white text-light">
    
    <div class="relative w-11/12 h-5/6 border-t-2 border-light-200">
        <div class="absolute top-0 left-0 h-full w-full z-10 grid lg:grid-cols-2 py-5 " >

            <div class="relative hidden lg:flex justify-start items-end gap-10 w-full h-full">
                <h1 class="absolute -bottom-5 text-9xl">Tiziano</h1>
            </div>
            
            <div class="flex flex-col items-center justify-end gap-2 place-self-end w-full h-full">
                <FooterInfo />
                <div class="flex justify-center items-end gap-5 w-11/12 md:w-96 h-8" > 
                    <FooterButton href="/" >
                        <Image src={aboutIcon} alt="about" height={40} width={40} slot={"icon"} class={"object-cover"}/>
                    </FooterButton>
                    
                    <FooterButton href="/projects">
                        <Image src={workIcon} alt="projects" height={30} width={30} slot={"icon"} class={"object-cover"}/>
                    </FooterButton>
                    
                    <FooterButton href="/contact">
                        <Image src={contactIcon} alt="contact" height={30} width={30} slot={"icon"} class={"object-cover"}/>
                    </FooterButton>
                </div>
                <FooterCurrent />
            </div>
            
        </div>
    </div>
</footer>