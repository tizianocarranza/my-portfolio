---
import Layout from "./Layout.astro";


interface Props {
    projectTitle: string,
}

const { projectTitle } = Astro.props

let next, prev;
next = projectTitle == "Donar" ? "synergia" : projectTitle == "Synergia" ? "orbit4" : "donar"
prev = projectTitle == "Donar" ? "orbit4" : projectTitle == "Synergia" ? "donar" : "synergia"

---

<Layout title={`Tiziano's portfolio | ${projectTitle} Project`} header="My work">
    <!-- Moble -->
    <div class="flex flex-col gap-2 h-full w-full" slot="mobile-content">
        <slot />
        <div class="flex gap-10 place-self-center text-lg font-medium">
            <a class="text-detail" href={`./${prev}`}>Watch previous</a>
            <a class="text-detail" href={`./${next}`}>Watch next</a>
        </div>
    </div>

    <!-- Desktop -->
    <div
        class="flex flex-col gap-2 col-start-2 row-start-2 self-end justify-self-center font-medium"
    >
        <a class="text-detail text-xl xl:text-3xl" href={`./${next}`}>Watch next</a>
        <a class="text-detail text-xl xl:text-3xl" href={`./${prev}`}>Watch previous</a>
    </div>

    <div
        class="w-full flex flex-col gap-20 col-start-2 row-start-1 row-span-2 place-self-start h-2/3"
    >
        <slot />
    </div>
</Layout>

